<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".order_success">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you for your Order"
        android:layout_marginTop="75dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your order has been placed Successfully!"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/gradient"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btnshopmore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop More"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            app:backgroundTint="@null"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/gradient"
            android:background="@drawable/border_round_corner"
            />
        <Button
            android:id="@+id/btnviewOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Order"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:backgroundTint="@null"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"

            android:background="@drawable/round_corner"
            />
    </RelativeLayout>

</LinearLayout>
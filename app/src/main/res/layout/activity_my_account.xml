<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".My_account">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            android:layout_marginLeft="30dp"
             />
        <TextView
            android:id="@+id/uname_firstletter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="40sp"/>
    </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
        android:id="@+id/uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gradient"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="15sp" />
        </LinearLayout>
</LinearLayout>
    <View
        style="@style/Divider.Horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/myprofile"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   My Profile"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_user"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/mycart"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   My Cart"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_cart"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/myorder"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   My Order"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/order"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/mywishlist"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   My Wishlist"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_wishlist"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />
    <View
        style="@style/Divider.Horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/givefeedback"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Feedback"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_feedback"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/about"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   About"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_about_us"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/contactus"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Contact Us"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/account_contact"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/logout"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   Logout"
        android:textColor="@color/gradient"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/logout"
        android:drawableTint="@color/gradient"
        android:textSize="16sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            android:layout_alignParentBottom="true"
            app:menu="@menu/bottom_navigation" />
    </RelativeLayout>
</LinearLayout>
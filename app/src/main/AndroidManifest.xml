<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilehub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileHub"
        android:usesCleartextTraffic="true">
        <activity android:name=".Contact_Us"></activity>
        <activity android:name=".About_us">
        </activity>
        <activity android:name=".All_products" />
        <activity android:name=".order_details" />
        <activity android:name=".My_Orders" />
        <activity android:name=".give_feedback" />
        <activity android:name=".email_verification" />
        <activity android:name=".reset_password" />
        <activity android:name=".otp_verification" />
        <activity android:name=".order_success" />
        <activity android:name=".place_and_confirm_order_" />
        <activity android:name=".change_password" />
        <activity android:name=".My_Profile" />
        <activity android:name=".My_Wishlist" />
        <activity android:name=".My_cart" />
        <activity android:name=".product_details" />
        <activity android:name=".My_account" />
        <activity android:name=".product" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".Category"
            android:label="@string/Home_page" />
        <activity android:name=".forgot_password" />
        <activity android:name=".signup" />
        <activity android:name=".login" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>